{
  "name": "@bonusbubble/portal",
  "version": "0.4.0-alpha",
  "description": "♥ P2P networking library | High-level API | Cross-platform ♥",
  "main": "src/index.js",
  "bin": {
    "portal": "./bin/portal.js"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "npm run build:release-json && npm run build:linux && npm run build:osx && npm run build:windows",
    "build:linux": "pkg -t node14-linux -o dist/portal bin/portal.js",
    "build:osx": "pkg -t node14-osx -o dist/portal-osx bin/portal.js",
    "build:release-json": "node scripts/build/release-json.js",
    "build:windows": "pkg -t node14-win -o dist/portal.exe bin/portal.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bonusbubble/portal.git"
  },
  "keywords": [
    "p2p",
    "network",
    "networking",
    "api"
  ],
  "author": "Ashlynn Juniper <bonusbubble@bonusbyte.org>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/bonusbubble/portal/issues"
  },
  "homepage": "https://github.com/bonusbubble/portal#readme",
  "dependencies": {
    "@hyper-cmd/lib-keys": "https://github.com/holepunchto/hyper-cmd-lib-keys#v0.0.2",
    "@hyper-cmd/lib-net": "https://github.com/holepunchto/hyper-cmd-lib-net#v0.0.8",
    "@hyper-cmd/lib-utils": "https://github.com/holepunchto/hyper-cmd-lib-utils#v0.0.2",
    "dns2": "^2.1.0",
    "http-proxy": "github:Jimbly/node-http-proxy",
    "hyperbee": "^2.19.6",
    "hypercore": "^10.37.6",
    "hyperdht": "^6.6.1",
    "minimist": "^1.2.8",
    "nullstream": "^2.0.1",
    "random-access-memory": "^6.2.1",
    "random-port-promise": "^1.0.1",
    "sodium-universal": "^4.0.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
